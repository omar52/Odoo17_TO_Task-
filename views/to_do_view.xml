<odoo>
    <!--  so view is needed for user to execute crud operations -->
    <!--  Tree View -->
    <record id="to_do_view_tree" model="ir.ui.view">
        <field name="name">task tree</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <tree class="header_custom">
                <field name="task_name"/>
                <field name="state"/>
                <field name="task_description"/>
                <field name="due_date"/>
                <field name="assign_to_name" string="Assigned To"/>

            </tree>
        </field>
    </record>

    <!--  Form View -->
    <record id="to_do_view_form" model="ir.ui.view">
        <field name="name">task form</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <button name="action_new" type="object" class="btn-primary btn" string="Set To New"
                                    invisible="state == 'new'"/>
                            <button name="action_in_progress" type="object" class="btn-secondary btn"
                                    string="Set To In Prgoress" invisible="state !='new'"/>
                            <button name="action_completed" type="object" class="btn-primary btn"
                                    string="Set To Completed"
                                    invisible="state != 'in progress'"/>
                        </div>
                        <field name="state" widget="statusbar" statusbar_visible="new,in progress,completed"
                               options="{'clickable':0}"/>
                    </header>
                    <div class="oe_title">
                        <label for="task_name"/>
                        <h1>
                            <field name="task_name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="General Info">
                            <field name="task_description"/>
                            <field name="due_date"/>
                            <field name="assign_to"/>
                        </group>


                    </group>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!--  Search View -->
    <record id="to_do_view_search" model="ir.ui.view">
        <field name="name">todo search</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <search>
                <field name="task_name"/>
                <field name="assign_to"/>

                <filter name="state_new" string="Has New state" domain="[('state','=','new')]"/>
                <filter name="state_in_progress" string="Has Progress State" domain="[('state','=','in progress')]"/>
                <filter name="state_complete" string="Has Completed State" domain="[('state','=','completed')]"/>


                <filter name="person_in_charge" string="Person in charge" context="{'group_by':'assign_to_name'}"/>
                <filter name="task_state" string="Same State" context="{'group_by':'state'}"/>
                <filter name="mutual_deadline" string="mutual Deadline" context="{'group_by':'due_date'}"/>
            </search>
        </field>
    </record>
    <!--  action is used to execute the crud operations  -->
    <!--  action used is of type (window action), so when I click on this action it will open a view  -->
    <record id="todo_action" model="ir.actions.act_window">
        <field name="name">Tasks</field>
        <field name="res_model">todo.task</field>
    </record>

    <menuitem
            id="to_do_menu_item"
            name="Tasks"
            parent="tasks_menu"
            action="todo_action"
    />
</odoo>